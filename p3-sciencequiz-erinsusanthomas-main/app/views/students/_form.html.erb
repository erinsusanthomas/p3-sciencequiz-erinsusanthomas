<%= simple_form_for(@student) do |f| %>
    <%= f.error_notification %>
    <div class="row">
      <div class="form-inputs">
        <%= f.input :first_name, label_html: { class: 'active' } %>
        <%= f.input :last_name, label_html: { class: 'active' } %>
        <%= f.input :grade, label_html: { class: 'active' } %>
        <%= f.input :organization_id, collection: Organization.alphabetical.active.to_a %> 
        <%= f.input :active %>
      </div>
    </div>
    <div class="row">
      <div class="form-actions col s8">
        <%= f.button :submit %>
      </div>
    </div>
  <% end %>
  