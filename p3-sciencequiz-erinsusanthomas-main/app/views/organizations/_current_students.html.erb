<div class="card">
  <div class="card-content">
    <% if @current_students.empty? %>
      <p>No current students</p>
    <% else %>
    <span class="card-title">Current Students - <%= @organization.short_name %></span>
      <table class="striped highlight">
        <thead>
          <th>Name</th>
          <th>Grade</th>
        </thead>
        <% for student in @current_students %>
          <tr>
            <td><%= link_to student.name, student_path(student) %></td>
            <td><%= student.grade %></td>
          </tr>
        <% end %>
      </table>
    <% end %>
    <br/><%= link_to 'Add a new student', new_student_path %>
  </div>
</div>